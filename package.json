{
  "name": "typeorm-markdown",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Jinyoung Lee",
  "description": "TypeORM Markdown documents generator including ERD diagrams and comment descriptions",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepare": "ts-patch install -s",
    "build": "rimraf dist && tspc",
